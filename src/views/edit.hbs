

            <!-- Edit Page -->
            <section id="create-section">

                <h1 class="item">Edit Auction</h1>

                <div class="item padded align-center">

                    <form class="layout left large" method="POST" action="">

                        <div class="col aligned">
                            <label>
                                <span>Title</span>
                                <input type="text" name="title" value="{{currentAuction.title}}"></label>
                            <label>
                                <span>Category</span>
                                <select name="category">
                                    {{#each categories}}
                                    {{>selectedCategory}}
                                    {{/each}}
                                </select>
                            </label>
                            <label>
                                <span>Image URL</span>
                                <input type="text" name="imageUrl" value="{{currentAuction.imageUrl}}">
                            </label>
                            <label>
                                <span>Starting price</span>

                                <!-- If the current auction has a bidder, this input field should be disabled -->
                                <input type="number" name="price" value="{{currentAuction.price}}">
                            </label>
                        </div>

                        <div class="content pad-med align-center vertical">
                            <label>
                                <span>Description</span>
                                <textarea name="description">Excellent condition. Onboard diesel motor, upholstered cockpit, fishing sonar. Includes trailer.
                                </textarea>
                            </label>

                            <div class="align-center">
                                <input class="action" type="submit" value="Update Listing">
                            </div>
                        </div>

                    </form>

                </div>

            </section>
