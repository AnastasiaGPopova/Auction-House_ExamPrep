
            
            <!-- Details Page -->
            <section id="catalog-section">

                <h1 class="item">
                    {{currentAuction.title}}
                    {{#if isOwner}}
                        <a href="/{{currentAuction._id}}/edit" class="action">Edit</a>
                        <a href="/{{currentAuction._id}}/delete" class="action">Delete</a>
                    {{/if}}
                </h1>
                <div class="item padded">

                    <div class="layout right large">

                        <div class="col">
                            <img src="{{currentAuction.imageUrl}}" class="img-large">
                        </div>

                        <div class="content pad-med">

                            <p>In category: <strong>{{currentAuction.category}}</strong></p>
                            <p>{{currentAuction.description}}</p>

                            <div class="align-center">
                                <div>
                                    Current price: $<strong>{{currentAuction.price}}</strong>
                                </div>
                                {{#if isLogged}}
                                {{#if isOwner}}
                                  {{#if isBid}}
                                <div>
                                    Bit by <strong>{{bidArray}}</strong>
                                </div>
                                   {{else}}
                                <div>
                                    No bits
                                </div>
                                    {{/if}}
                                {{else}}
                                <!-- If current user can place a bid -->
                                {{#if isBidAlreadyLast}}
                                <div>
                                    You are currently the <strong>highest bidder</strong> for this auction
                                </div>
                                {{else}}
                                <form class="vertical" method="POST" action="/{{currentAuction._id}}/bid">
                                    <label><span>Bid amount</span><input type="number" name="bidAmount"></label>
                                    <input class="action" type="submit" value="Place bid">
                                </form>
                                {{/if}}

                                
                                {{/if}}
                                {{/if}}

                            </div>

                        </div>
                    </div>

                    <footer>Listed by Peter Jackson</footer>
                </div>

            </section>